{
  "info": {
    "name": "Microservices",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth Service",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{authBaseUrl}}/auth/register",
              "host": ["{{authBaseUrl}}"],
              "path": ["auth", "register"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Guilherme\",\n  \"email\": \"guilherme@example.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        },
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{authBaseUrl}}/auth/login",
              "host": ["{{authBaseUrl}}"],
              "path": ["auth", "login"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"guilherme@example.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{authBaseUrl}}/auth/refresh",
              "host": ["{{authBaseUrl}}"],
              "path": ["auth", "refresh"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"{{refreshToken}}\"\n}"
            }
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{authBaseUrl}}/auth/me",
              "host": ["{{authBaseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "User Service",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{userBaseUrl}}/user",
              "host": ["{{userBaseUrl}}"],
              "path": ["user"]
            }
          }
        },
        {
          "name": "Get User By Id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{userBaseUrl}}/user/{{userId}}",
              "host": ["{{userBaseUrl}}"],
              "path": ["user", "{{userId}}"]
            }
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{userBaseUrl}}/user/{{userId}}",
              "host": ["{{userBaseUrl}}"],
              "path": ["user", "{{userId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Guilherme Silva\",\n  \"phone\": \"+55 11 98888-0000\"\n}"
            }
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{userBaseUrl}}/user/{{userId}}",
              "host": ["{{userBaseUrl}}"],
              "path": ["user", "{{userId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Restaurant Service",
      "item": [
        {
          "name": "List Orders",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{restaurantBaseUrl}}/orders",
              "host": ["{{restaurantBaseUrl}}"],
              "path": ["orders"]
            }
          }
        },
        {
          "name": "Create Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{restaurantBaseUrl}}/orders",
              "host": ["{{restaurantBaseUrl}}"],
              "path": ["orders"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderNumber\": \"CMD-1001\",\n  \"customerName\": \"Maria\",\n  \"tableNumber\": \"12\",\n  \"status\": \"open\",\n  \"items\": [\n    {\n      \"dishName\": \"Pizza Margherita\",\n      \"quantity\": 2\n    },\n    {\n      \"dishName\": \"Suco de Laranja\",\n      \"quantity\": 1\n    }\n  ]\n}"
            }
          }
        },
        {
          "name": "Get Order By Id",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{restaurantBaseUrl}}/orders/{{orderId}}",
              "host": ["{{restaurantBaseUrl}}"],
              "path": ["orders", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Update Order",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{restaurantBaseUrl}}/orders/{{orderId}}",
              "host": ["{{restaurantBaseUrl}}"],
              "path": ["orders", "{{orderId}}"]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"in_progress\"\n}"
            }
          }
        },
        {
          "name": "Delete Order",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{restaurantBaseUrl}}/orders/{{orderId}}",
              "host": ["{{restaurantBaseUrl}}"],
              "path": ["orders", "{{orderId}}"]
            }
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "authBaseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "userBaseUrl",
      "value": "http://localhost:3001"
    },
    {
      "key": "restaurantBaseUrl",
      "value": "http://localhost:3002"
    },
    {
      "key": "accessToken",
      "value": ""
    },
    {
      "key": "refreshToken",
      "value": ""
    },
    {
      "key": "userId",
      "value": "1"
    },
    {
      "key": "orderId",
      "value": "1"
    }
  ]
}
